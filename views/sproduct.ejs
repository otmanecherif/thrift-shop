<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="wimainImagedth=device-width, initial-scale=1.0">
    <title>My ThriftShop</title>
    <link rel="stylesheet" href="/css/sproduct.css">

   <!-- links to fonts* !-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pathway+Extreme:wght@100;200;300;400;500;600;700&display=swap"
     rel="stylesheet">
    
   <!--  to use cdnjs library for assets -->
    <link rel="stylesheet" 
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" 
    integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" 
    crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- to use icons remotly from the website boxicons -->
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>
    <header>
            <a href="/home" class="logo">THRIFTED</a>
           
            <ul class="navbar">
              <li><a href="#">Women's wear</a></li>
              <li><a href="#">Men's wear</a></li>
              <li><a href="#">Mixed</a></li>
              <li><a href="#">Accessories</a></li>
           
             
            </ul>
            
            <div class="navicons">
               
                <a href="#" class="icon-search"><i class='bx bx-search'></i></a>
                <a href="/cart-page" class="icon-cart"><i class='bx bx-cart'></i></a>
                <a href="#" class="icon-likes"><i class='bx bx-heart' ></i></a>
                <a href="#" class="icon-menu"><i class='bx bx-menu'></i></i></a>

            </div>
            
    </header>
    <main>
        <section id="details" class="section-p1">
           <div class="images">
                <img src="<%= product.main_img %>" id="main-image" class="main-image" width="500px" alt="">
                <div class="thumbnails">   
                        <% if (product.thumbnail1 || product.thumbnail2 || product.thumbnail3 ) { %>
                        <img src="<%= product.main_img %>" class="thumbnail" alt="">
                        <% }  %>
                        
                        <% if (product.thumbnail1) { %>
                        <img src="<%= product.thumbnail1 %>" class="thumbnail" alt="">
                        <% }  %>
                  
                        <% if (product.thumbnail2) { %>
                        <img src="<%= product.thumbnail2 %>" class="thumbnail" alt="">
                        <% }  %>
                
                        <% if (product.thumbnail3) { %>
                        <img src="<%= product.thumbnail3 %>" class="thumbnail" alt="">
                        <% }  %>
          
                </div>
           </div>

           <div class="product-description"> 
            <h6>Home / <%= product.name %> </h6>
            <a href="#" class="icon-like"><i class='bx bxs-heart'> <%= product.likes %> </i></a>
            <h4 class="product-title">Women's Spring Collection</h4>
            <h2 class="product-cost"><%= product.price %>£</h2>
            
            <select >
                <option>Select Size</option>
                <% if (product.quantity_xl > 0) { %>
                    <option>XL</option>
                  <% } else { %>
                    <option disabled>XL (Out of Stock)</option>
                  <% } %>
                  <% if (product.quantity_l > 0) { %>
                    <option>L</option>
                  <% } else { %>
                    <option disabled>L (Out of Stock)</option>
                  <% } %>
                  <% if (product.quantity_m > 0) { %>
                    <option>M</option>
                  <% } else { %>
                    <option disabled>M (Out of Stock)</option>
                  <% } %>
                  <% if (product.quantity_s > 0) { %>
                    <option>S</option>
                  <% } else { %>
                    <option disabled>S (Out of Stock)</option>
                  <% } %>
             
            </select>
            
            <button id="add-to-cart" data-product-id="<%= product.product_id %>" ><i class='bx bx-cart' ></i>  Add To Cart </button>
            <button id="add-to-favs" data-product-id="<%= product.product_id %>" ><i class='bx bx-heart' ></i> Add to Wishlist</button>
            <h4>Product Details</h4>
            <div> 
                <table>
                    <tr>
                        <td class="category">Type</td>
                        <td><%= product.type %></td>
                    </tr>
                    <tr>
                        <td class="category">Material</td>
                        <td><%= product.material %></td>
                    </tr>
                    <tr>
                        <td class="category">Condition</td>
                        <td><%= product.condition %></td>
                    </tr>
                    <tr>
                        <td class="category">Brand</td>
                        <td><%= product.brand %></td>
                    </tr>
                 
                </table>
            </div>
            <div class="downarrow">
                <a href="#other-propositions" class="down"><i class='bx bx-down-arrow-alt'></i></a>
            </div>
             </div>
        </section>
        <section class="other" id="other-propositions">
            <div class="center-text">
                <h2>You may also like</h2>
                <div class="products">
                    <% products.forEach(product => { %>
                        <div class="row">
                            
                                <img class="product-photo" data-product-id="<%= product.product_id %>" src="<%= product.main_img %>" alt="">
            
                                <div class="product-stat"> <h5> <%= product.status %></h5></div>
            
                                <div class="product-info">
                                    <div class="price"> <h4><%= product.name %></h4><p><%= product.price %>£</p> </div>
                                     <div class="icons">
                                        <a class="like-icon"><i class='bx bx-heart' ></i></a>
                                        <a class="add-cart"><i class='bx bx-cart' ></i></a>
                                     </div>
                                  </div>     
                             
                        </div>
                    <% }); %>   

                </div>
                   
            </div>
        </section>

        <script src="js/sproduct.js"></script>
        <script>
            // listener to navigate through the thumbnails
            document.addEventListener('DOMContentLoaded', function() {
             const mainImage = document.getElementById('main-image');
              const thumbnails = document.querySelectorAll('.thumbnail');
        
              thumbnails.forEach(function(thumbnail) {
                thumbnail.addEventListener('click', function() {
                  const thumbnailSrc = thumbnail.src;
                  mainImage.src = thumbnailSrc;
                });
              });
            });
          </script>
    </main>
    
    <footer>
        <p>&copy; 2022-2023 THRIFTED</p>
    </footer>
</body>
</html>
